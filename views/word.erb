<h1>Word: <%= @word.word %></h1>
<a href="/words/<%= @word.id %>/edit">Edit</a>

<h2>All Definitions: </h2>
<% if @word.definitions.any? %>
<ol>
  <% @word.definitions.each do |definition| %>
  <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.text %></a></li>
  <% end %>
</ol>
<% else %>
<p>Sorry, please add a word.</p>
<% end %>

<form class="" action="/words/<%= @word.id %>/definitions" method="post">
  <div class="">
    <label>New Definition: </label>
    <input type="text">
  </div>
  <button type="submit"></button>
</form>
<p><a href="/words">Back to Words</a></p>
